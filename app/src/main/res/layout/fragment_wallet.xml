<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Fragment.Wallet">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_2sdp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/_8sdp"
                            android:text="Wallet"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold" />
                    </RelativeLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Balance"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/_10sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="â‚¹"
                        android:textSize="@dimen/_25sdp"
                        android:visibility="gone"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="You may add points in wallet using for Dailypit service"
                        android:textSize="12sp"
                        android:visibility="gone"
                        android:textColor="@color/red"/>

                    <TextView
                        android:id="@+id/txt_walletAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:hint="0"
                        android:gravity="center_vertical"
                        android:drawablePadding="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:textSize="@dimen/_20sdp" />

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.2dp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@color/grey" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Add Points in Wallet"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:textColor="@color/theme"
                    android:textSize="@dimen/_15sdp" />

                <TextView
                    android:id="@+id/txt_date"
                    android:textSize="12sp"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:text="Add Points to wallet and use it for get orders of services"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"

                    android:layout_marginTop="@dimen/_16sdp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/ed_amount"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:hint="Points"
                                android:paddingLeft="@dimen/_10sdp"
                                android:background="@null"
                                android:maxLength="5"
                                android:textColor="@color/black"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:inputType="number"/>

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@color/blue"/>


                    </LinearLayout>

                    <TextView
                        android:id="@+id/txt_addPoint"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADD"
                        android:textSize="@dimen/_11sdp"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/_20sdp"
                        android:background="@drawable/grey_background"
                        android:textColor="@color/white"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingRight="@dimen/_20sdp"/>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_15sdp"
                    android:layout_marginRight="@dimen/_15sdp"

                    android:layout_marginTop="@dimen/_5sdp">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="3">

                            <LinearLayout
                                android:id="@+id/txt_50RupeesLayout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/grey_line_background"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_8sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="+ 50"
                                    android:textSize="10sp"
                                    android:gravity="center"
                                    android:textColor="@color/black"
                                    android:background="@null"
                                    android:textStyle="bold"
                                    android:inputType="number"/>



                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/txt_100RupeesLayout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/grey_line_background"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_8sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_weight="1">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="+ 100"
                                    android:textSize="10sp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"/>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/txt_500RupeesLayout"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:background="@drawable/grey_line_background"
                                android:orientation="horizontal"
                                android:gravity="center"
                                android:paddingTop="@dimen/_8sdp"
                                android:paddingBottom="@dimen/_8sdp"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_marginRight="@dimen/_5sdp"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="+ 500"
                                    android:textSize="10sp"
                                    android:gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="@color/black"/>

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:visibility="invisible"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ADD"
                        android:textSize="@dimen/_11sdp"
                        android:layout_gravity="center"
                        android:paddingLeft="@dimen/_20sdp"
                        android:background="@drawable/btn_background"
                        android:textColor="@color/white"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:paddingRight="@dimen/_20sdp"/>

                </LinearLayout>

            </LinearLayout>



             <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:elevation="@dimen/_10sdp"
                    android:background="@drawable/simple_white_background"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Transaction"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="16sp"/>

                        <ImageView
                            android:id="@+id/img_transaction"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:src="@drawable/ic_arrow_forward"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/wallet_recyclerView"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                tools:listitem="@layout/wallet_list" />

                            <ImageView
                                android:id="@+id/img_dataNotFound"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_150sdp"
                                android:layout_centerVertical="true"
                                android:visibility="gone"
                                android:src="@drawable/data_not_available"/>

                        </RelativeLayout>

                    </LinearLayout>



                </LinearLayout>



            </LinearLayout>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/mainProgressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"/>

</RelativeLayout>